{
  "manifest_version": 2,

  "name": "Fone King to Vend",
  "description": "Get jobs from RepairCMS into Vend",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },

  "omnibox": { "keyword" : "fk" },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Fone King to Vend",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://fonekingdemo.vendhq.com/*",
        "http://foneking.repaircms.com.au/"
      ],
      "js": ["contentscript.js", "popup.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "tabs",
    "https://fonekingdemo.vendhq.com/",
    "http://foneking.repaircms.com.au/"
  ]
}
